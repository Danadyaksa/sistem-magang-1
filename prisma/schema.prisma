// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   // Ini nanti di-hash
  jabatan   String?
  createdAt DateTime @default(now())
}

model Position {
  id          Int           @id @default(autoincrement())
  title       String        // Nama Bidang
  quota       Int           // Kuota Total
  filled      Int           @default(0) // Yang udah diterima
 
  description String?
  
  // Relasi ke pelamar (opsional, buat tracking siapa masuk bidang mana)
  pendaftar   Pendaftaran[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Pendaftaran {
  id            String   @id @default(uuid())
  
  // Data Diri
  namaLengkap   String
  nomorInduk    String
  email         String
  nomorHp       String
 
  instansi      String
  fakultas      String?
  jurusan       String
  pembimbing       String?
  kontakPembimbing String?
  
  // Detail Magang
  lamaMagang    Int
  tanggalMulai  DateTime
  tanggalSelesai DateTime
  
  // Surat Pengantar
  pemohonSurat  String
  nomorSurat    String
  tanggalSurat  DateTime
  
  // File (Simpan path/nama file aja)
  cvPath        String
  suratPath     String
  fotoPath      String
  
  // Status & Penempatan
  status        String    @default("PENDING") // PENDING, ACCEPTED, REJECTED
  
  // Kalau diterima, masuk bidang mana (Relasi ke Position)
  positionId    Int?
  position      Position? @relation(fields: [positionId], references: [id])

  createdAt     DateTime  @default(now())
}

// --- TAMBAHAN: MODEL IZIN PENELITIAN ---
model Penelitian {
  id            String   @id @default(uuid())
  
  // Data Peneliti
  namaLengkap   String
  nomorInduk    String   // NIM / NIDN
  universitas   String   // Asal Instansi
  fakultas      String?
  jurusan       String   // Jurusan + Jenjang
  nomorHp       String
  email         String   
  
  // Detail Penelitian
  kategori      String   // Skripsi, Tesis, dll
  judul         String   
  subjek        String   
  
  // Surat Pengantar
  pemohonSurat  String   
  nomorSurat    String
  tanggalSurat  DateTime
  
  // File
  fileSuratPath String   
  fileProposalPath String?
  status        String    @default("PENDING") 
  createdAt     DateTime  @default(now())
}

model Holiday {
  id          String   @id @default(uuid())
  date        DateTime @unique // Tanggal libur
  createdAt   DateTime @default(now())
}

model Upt {
  id        Int      @id @default(autoincrement())
  name      String   
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- TAMBAHAN: MODEL PENGATURAN SISTEM ---
model Setting {
  id        String   @id @default(uuid())
  key       String   @unique // Contoh: "MIN_MAGANG_DAYS"
  value     String   // Contoh: "44"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}